<!doctype html>
<html>

  <head>
    <title>Login for <%=shopData.shopName%></title> 
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>

  <!-- nav -->
  <nav>

    <ul class="nav-list">
      <li><a href="/">HOME</a></li> 
    </ul>

  </nav>

  <body>

    <h1>Login for <%=shopData.shopName%></h1> 

    <h2>Welcome back player :D</h2>

    <p>You can view the full players list only when you are logged in!</p>

    <!-- login form -->
    <form method="POST" action="loggedin">
        <p>Username: <input id="username" type="text" name="username" required></p> <!-- username of the user -->
        <p>Password: <input id="password" type="password" name="password" required></p> <!-- password of the user -->
        <input type="submit" value="Login" class="button"/> <!-- submit button to login -->
    </form>
      
  </body>
</html>